# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database - Use Turso for production (serverless compatible)
# For local development: Comment out TURSO variables and use local SQLite
# For Vercel: Set these environment variables in Vercel dashboard
TURSO_CONNECTION_URL=libsql://your-db-name-xxx.turso.io
TURSO_AUTH_TOKEN=your-auth-token-here
DATABASE_URL=libsql://your-db-name-xxx.turso.io

# Local fallback (only for development)
DB_PATH=./server/data/rodb.db

# Security & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
SESSION_TIMEOUT=3600000

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW_MS=900000
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# File Upload
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_DIR=./server/uploads

# Session
SESSION_SECRET=your-session-secret-key-change-this-in-production
UPLOAD_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_ALLOWED_VIDEO_TYPES=video/mp4,video/webm
UPLOAD_PATH=./server/uploads

# Backup
BACKUP_PATH=./server/backups
BACKUP_RETENTION_DAYS=30

